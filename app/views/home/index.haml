      #building-b1
      #building-b2
      #building-b3
      #building-b4
      #building-b5
      #building-b6
      #building-b7
      =image_tag 'home/building/star.png', :id => 'building-star'
      #building-tb1
        %h3 No ser virtual
        %h4 pero sí digital-derrotado
      #building-tb2
        %h4 para ser un dígito mayor <br/>vencedor-y-vencido


